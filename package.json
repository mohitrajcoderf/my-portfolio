{
  "name": "my-portfolio",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"content-collections watch\" \"build-scripts dev\" \"next dev\"",
    "build": "content-collections build && build-scripts build && next build",
    "start": "next start",
    "lint": "biome lint .",
    "lint:write": "biome lint -write--unsafe .",
    "format": "biome format .",
    "format:write": "biome format --write .",
    "code-check": "biome check .",
    "code-check:write": "biome check -write--unsafe .",
    "biome:ci": "biome ci ."
  },
  "dependencies": {
    "@content-collections/core": "^0.8.0",
    "@content-collections/next": "^0.2.4",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-tooltip": "^1.1.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "concurrently": "^9.1.2",
    "content-collections": "^0.1.2",
    "geist": "^1.3.1",
    "lucide-react": "^0.471.1",
    "next": "15.1.4",
    "next-themes": "^0.4.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.20",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  }
}