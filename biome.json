{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"overrides": [
		{
			"ignore": [
				"node_modules",
				"dist",
				".next"
			]
		}
	],
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": []
	},
	"formatter": {
		"indentStyle": "space",
		"indentWidth": 2
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"nursery": {
				"recommended": true,
				"noUnusedImports": "warn",
				"useAwait": "warn"
			},
			"a11y": {
                "noSvgWithoutTitle": "off",
				"useAltText": "warn",
				"useButtonType": "warn",
				"useKeyWithClickEvents": "warn"
			},
			"correctness": {
				"useExhaustiveDependencies": "warn"
			},
			"performance": {
				"noDelete": "warn"
			},
			"style": {
				"all": false
			},
			"suspicious": {
				"noArrayIndexKey": "warn",
				"noAssignInExpressions": "warn",
				"noEmptyInterface": "off",
				"noExplicitAny": "warn"
			}
		}
	},
	"javascript": {
		"formatter": {
			"semicolons": "always",
			"trailingComma": "none",
			"bracketSpacing": true
		}
	}
}
